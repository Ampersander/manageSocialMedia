{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
{{ parent() }}
<article class="d-flex justify-content-around flex-wrap m-4">
{% for post in posts %}
<div class="card m-3" style="width: 18rem;">
      {% if post.image != null %}
  <img class="card-img-top" src="{{ post.image }}" alt="Card image cap">
  {% else %}
    <img class="card-img-top" src="https://www.lyoncapitale.fr/wp-content/themes/siteorigin-fidumedias/images/lyoncap/actularge.jpg" alt="Card image cap">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">{{post.socialMediaAccounts}}</h5>
    <p class="card-text">{{ post.description }}</p>
    <div class="d-flex justify-content-around">
    <a href="{{ path('post_watch', {'id' : post.id}) }}" class="btn btn-primary">Lire la suite</a>
    <a href="{{ path('post_edit', {'id' : post.id}) }}" class ="btn btn-primary">Modifier le post</a>
    </div>
  </div>
</div>
{% endfor %}
</article>
{% endblock %}
